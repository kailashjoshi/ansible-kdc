[kdcdefaults]
  kdc_ports = 88
  kdc_tcp_ports = 88

[realms]
  {{ default_realm|upper }} = {
    max_renewable_life = 7d 0h 0m 0s
    max_life = 10h 0m 0s
    master_key_type = des3-hmac-sha1
    acl_file = /var/kerberos/krb5kdc/kadm5.acl
    dict_file = /usr/share/dict/words
    admin_keytab = /var/kerberos/krb5kdc/kadm5.keytab
    supported_enctypes = aes256-cts:normal des3-hmac-sha1:normal arcfour-hmac:normal
    key_stash_file = /var/kerberos/krb5kdc/.k5.{{ ansible_domain }}
  }